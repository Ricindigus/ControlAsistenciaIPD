<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ricardo.controlasistenciaipd.FinalizarActivity"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:id="@+id/content_referencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logo"
                android:layout_centerInParent="true"
                android:background="@drawable/ipd1"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:id="@+id/txtResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listo!"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginBottom="15dip"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/txtMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos guardados exitÃ³samente"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginBottom="15dip"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/continuar_guardando"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEGUIR GUARDANDO REGISTROS"
                android:theme="@style/RaisedButtonDark"
                android:onClick="goContinuarGuardando"
                />
            <Button
                android:id="@+id/salir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SALIR"
                android:theme="@style/RaisedButtonDark"
                android:onClick="goSalir"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

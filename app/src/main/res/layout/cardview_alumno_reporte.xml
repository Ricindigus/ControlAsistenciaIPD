<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alumnoCard"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    cardview:cardCornerRadius="0dp"
    cardview:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cardview_reporte_numero"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:paddingLeft="10dp"
            android:text="1."
            android:background="@color/colorAccent"
            android:textColor="@color/colorIcons"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
            android:id="@+id/cardview_reporte_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Morales Retamozo Denis Ricardo"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold" />
            <TextView
                android:id="@+id/cardview_reporte_asistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="S1:A-S2:A-S3:A-S4:F-S5:A-S6:A-S7:A-S8:A-S9:A"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>